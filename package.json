{
  "private": true,
  "license": "(EPL-2.0 OR MIT)",
  "engines": {
    "yarn": "1.0.x || >=1.2.1",
    "node": ">=12.14.1"
  },
  "scripts": {
    "prepare": "lerna run prepare",
    "watch": "lerna run --parallel watch",
    "build": "lerna run build",
    "lint": "lerna run lint --",
    "lint:fix": "yarn lint -fix",
    "start": "yarn --cwd example/browser-app start",
    "upgrade": "yarn upgrade -p \"@theia/.*|@eclipse-emfcloud/modelserver-client|@eclipse-emfcloud/modelserver-theia\"",
    "publish:prepare": "lerna version --ignore-scripts --yes --no-push",
    "publish:latest": "lerna publish from-git --no-git-reset --no-git-tag-version --no-verify-access --no-push",
    "publish:next": "SHA=$(git rev-parse --short HEAD) && lerna publish preminor --exact --canary --preid next.${SHA} --dist-tag next --no-git-reset --no-git-tag-version --no-push --ignore-scripts --yes --no-verify-access"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "keytar": "7.2.0",
    "lerna": "^4.0.0",
    "prettier": "^2.4.1",
    "rimraf": "^2.6.1",
    "typescript": "^4.6.3"
  },
  "workspaces": [
    "jsonforms-property-view",
    "modelserver-jsonforms-property-view",
    "example/browser-app",
    "example/person-detail-property-view"
  ]
}
